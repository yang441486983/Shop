<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.shop.Fragment.HomepageFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:fitsSystemWindows="true"
        android:background="#9b1313"
        android:layout_width="match_parent"
        android:layout_height="100dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="user"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:id="@+id/info_my"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.example.shop.util.RoundImageView
            android:src="@drawable/logo"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"

        android:text="我的订单"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <me.codego.view.DotLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/unPay"
                app:dotOverPadding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/money"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </me.codego.view.DotLayout>
            <TextView
                android:text="待付款"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout

            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <me.codego.view.DotLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/unShipped"
                app:dotOverPadding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/money"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </me.codego.view.DotLayout>
            <TextView
                android:text="待发货"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <me.codego.view.DotLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/unReceived"
                app:dotOverPadding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/money"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </me.codego.view.DotLayout>
            <TextView
                android:text="待收货"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <me.codego.view.DotLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/all"
                app:dotOverPadding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/money"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </me.codego.view.DotLayout>
            <TextView
                android:text="全部订单"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="我的地址"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:clickable="true"
            android:id="@+id/address_manage"
            android:text="管理我的地址->"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
