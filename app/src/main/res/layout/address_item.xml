<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="张三"
            android:textSize="20dp"
            android:id="@+id/receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/receiver_tel"
            android:text="123456789"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="辽宁省"
            android:id="@+id/receiver_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="大连市"
            android:id="@+id/receiver_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="甘井子区"
            android:id="@+id/receiver_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="软件园路8号大连东软信息学院"
            android:id="@+id/receiver_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        style="@style/common_horizontal_division_line_style">
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/receiver_isDefault"
            android:layout_weight="1"
            android:text="设为默认地址"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/address_edit"
            android:text="编辑"
            android:background="@drawable/frame_item"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
        <Button
            android:id="@+id/address_delete"
            android:text="删除"
            android:layout_marginLeft="5dp"
            android:background="@drawable/frame_item"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
    </LinearLayout>
    <LinearLayout
        android:background="#f9f4f4"
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </LinearLayout>
</LinearLayout>
