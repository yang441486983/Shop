<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#a3d1fa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/windowImg"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:layout_weight="1"
                android:id="@+id/windowPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/windowStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:text="请选择详细信息"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/close"
            android:text="关闭"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="6dp"
        android:text="颜色"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.example.shop.util.GoodsViewGroup
        android:id="@+id/color_group"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:horPadding="20dip"
        app:verPadding="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.shop.util.GoodsViewGroup>
    <!--<RadioGroup-->
        <!--android:id="@+id/colorGroup"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

    <!--</RadioGroup>-->
    <TextView
        android:layout_marginLeft="6dp"
        android:text="尺寸"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.example.shop.util.GoodsViewGroup
        android:id="@+id/size_group"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:horPadding="20dip"
        app:verPadding="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.shop.util.GoodsViewGroup>
    <!--<RadioGroup-->
        <!--android:id="@+id/sizeGroup"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
    <!--</RadioGroup>-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="购买数量"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.travijuu.numberpicker.library.NumberPicker
            android:layout_weight="1"
            android:id="@+id/numPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.travijuu.numberpicker.library.NumberPicker>

    </LinearLayout>
    <info.hoang8f.widget.FButton
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/confirm"
        android:text="确认购买"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
